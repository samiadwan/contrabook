    <ImageView
        android:id="@+id/item_backdrop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="@dimen/normal"
            android:paddingLeft="@dimen/large"
            android:paddingRight="@dimen/large"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_name"
                style="@style/TextStyle.ModelItem.Name"/>

            <TextView
                android:id="@+id/item_address"
                style="@style/TextStyle.ModelItem"/>

            <TextView
                android:id="@+id/item_url"
                style="@style/TextStyle.ModelItem"/>

            <TextView
                android:id="@+id/item_email"
                style="@style/TextStyle.ModelItem"/>

            <TextView
                android:id="@+id/item_phone"
                style="@style/TextStyle.ModelItem"/>

        </LinearLayout>

        <include layout="@layout/model_item_toolbar"/>

    </RelativeLayout>



